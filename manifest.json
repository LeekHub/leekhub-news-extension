{
  "manifest_version": 3,
  "name": "LeekHub 金融资讯",
  "version": "1.0",
  "description": "展示实时财经新闻，提供重要信息过滤功能",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.jin10.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
} 